{
  "name": "abdullah-sms-bot",
  "version": "2.0.0",
  "description": "Advanced Telegram bot for SMS and OTP management with panel integration",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "setup": "node scripts/setup-db.js",
    "deploy": "node scripts/deploy-commands.js",
    "test": "jest",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "docker:build": "docker build -t abdullah-sms-bot .",
    "docker:run": "docker run -p 3000:3000 --env-file .env abdullah-sms-bot",
    "docker:compose": "docker-compose up -d",
    "docker:logs": "docker-compose logs -f",
    "render:deploy": "render deploy",
    "railway:deploy": "railway up"
  },
  "keywords": [
    "telegram",
    "bot",
    "sms",
    "otp",
    "verification",
    "virtual-number"
  ],
  "author": "Abdullah SMS Team",
  "license": "MIT",
  "dependencies": {
    "node-telegram-bot-api": "^0.64.0",
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "sequelize": "^6.35.0",
    "sqlite3": "^5.1.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "rate-limit": "latest",
    "express-rate-limit": "^7.1.5",
    "winston": "^3.11.0",
    "moment-timezone": "^0.5.43",
    "mathjs": "^11.11.1",
    "uuid": "^9.0.1",
    "node-cron": "^3.0.3",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Xdetective9/abdullah-sms-bot.git"
  },
  "bugs": {
    "url": "https://github.com/Xdetective9/abdullah-sms-bot/issues"
  },
  "homepage": "https://github.com/Xdetective9/abdullah-sms-bot#readme"
}
